
@{
    ViewData["title"] = "List Compare";
    var key = 0;
}
<h3>List Compares</h3>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var compare_product in Model)
        {
            key++;
            <tr>
                <td>@key</td>
                <td>@compare_product.Product.Name</td>
                <td>@Html.Raw(@compare_product.Product.Description)</td>
                <td>@compare_product.Product.Price.ToString("#,##0 VNĐ")</td>
                <td><img src="/media/products/@compare_product.Product.Image" width="120"></td>
                <td>
                    <a asp-action="DeleteCompare" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@compare_product.Compares.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
